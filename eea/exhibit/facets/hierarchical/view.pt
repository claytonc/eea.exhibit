<tal:facet define="
  name python:view.settings('name', '');
  label python:view.settings('label', '');">
<div
  xmlns:ex="http://simile.mit.edu/2006/11/exhibit#"
  ex:role="exhibit-facet" ex:facetClass="HierarchicalFacet" tal:attributes="
  ex:expression string:.$name;
  ex:facetLabel string:$label;
  id string:$name-facet"
  tal:condition="name"
></div>

</tal:facet>
